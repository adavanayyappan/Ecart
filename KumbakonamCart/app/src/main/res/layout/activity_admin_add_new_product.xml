<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.AdminAddNewProductActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
                    android:id="@+id/close_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />

                <com.am.induster.SupportingFiles.TextView.TelegraphSemiBoldTextView
                    android:id="@+id/users_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@+id/app_bar_add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_shadow_start_color"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_camera" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@+id/select_product_image"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:hint="Category"
            android:inputType="text"
            android:padding="20dp" />

        <Spinner
            android:id="@+id/subcategory_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@+id/category_spinner"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:hint="Sub Category"
            android:inputType="text"
            android:padding="20dp" />

    <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subcategory_spinner"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Product Name"
        android:inputType="textMultiLine"
        android:padding="20dp" />

    <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
        android:id="@+id/product_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Product Description"
        android:inputType="textMultiLine"
        android:padding="20dp" />

        <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_Description"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:hint="Product Price"
            android:inputType="number"
            android:padding="20dp" />

    <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
        android:id="@+id/product_offer_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_offer"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Product Offer"
        android:inputType="number"
        android:padding="20dp" />

        <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
            android:id="@+id/product_price_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:hint="Product Offer Price"
            android:inputType="number"
            android:padding="20dp" />

        <com.am.induster.SupportingFiles.EditText.TelegraphMediumEditText
            android:id="@+id/product_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_offer_prize"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:hint="Product Brand"
            android:inputType="text"
            android:padding="20dp" />

    <com.am.induster.SupportingFiles.Button.TelegraphBoldButton
        android:id="@+id/add_new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_brand_name"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:text="Add Product"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>
</ScrollView>