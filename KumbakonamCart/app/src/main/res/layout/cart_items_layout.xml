<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/grey_3"
        >

        <FrameLayout
            android:id="@+id/product_offer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/offer_circle"
                android:layout_gravity="center_horizontal|right">

                <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
                    android:id="@+id/product_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_offer_layout"
                    android:text="30 %"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </FrameLayout>

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_offer_layout"
            android:layout_marginLeft="5dp"
            android:text="Product Name"
            android:textColor="@color/grey_90"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_offer_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Product Quantity"
            android:textAlignment="viewEnd"
            android:textColor="@color/grey_90"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_quantity"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Product Brand:"
            android:textColor="@color/grey_90"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_brand"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Product Price"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_offer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_price"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Product Offer Price"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/cart_product_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_offer_price"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey_90"
            android:textSize="14dp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView >