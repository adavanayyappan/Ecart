<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_3">

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/grey_90"
            android:textSize="20dp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/product_offer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/offer_circle"
                android:layout_gravity="center_horizontal|right">

            <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
                android:id="@+id/product_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_offer_layout"
                android:text="30 %"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold"
                />


            </LinearLayout>

        </FrameLayout>

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_offer_layout"
            android:text="Brand: "
            android:textAlignment="center"
            android:textColor="@color/grey_90"
            android:textStyle="bold"
            android:textSize="18dp" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_brand_name"
            android:text="Product Price"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_offer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price"
            android:layout_marginTop="5dp"
            android:text="Product offer Price"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18dp" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_offer_price"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:text="Product Description"
            android:textAlignment="center"
            android:textColor="@color/grey_90"
            android:textSize="16dp" />

        <com.am.induster.SupportingFiles.TextView.TelegraphMediumTextView
            android:id="@+id/product_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/product_description"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:gravity="center"
            android:visibility="gone"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary1"
            android:background="@color/colorPrimaryDark"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>